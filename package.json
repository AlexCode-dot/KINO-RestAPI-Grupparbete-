{
  "name": "kino-scrum",
  "version": "1.0.0",
  "description": "Website for a local movie theater",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "start": "node src/server.js",
    "prepare": "husky install",
    "build-css": "sass src/styles/main.scss static/style/styles.css",
    "watch-css": "sass --watch src/styles/main.scss:static/style/styles.css",
    "build": "npm run build-css",
    "build:css": "npx postcss src/styles/tailwind.css -o static/style/tailwind.css --verbose"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.4.2",
    "sass": "^1.85.1",
    "supertest": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "csurf": "^1.10.0",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "ejs-mate": "^4.0.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "marked": "^15.0.6",
    "node-fetch": "^3.3.2",
    "tailwindcss": "^3.4.14"
  }
}
