    <option>&#9733;&#9733;&#9733;&#9733;</option>
    <option>&#9733;&#9733;&#9733;&#9733;&#9733;</option>
  </select>
  <label class="name-label">Ditt namn: </label>
  <input text="text" class="name-input">
  <textarea class="review-textarea" placeholder="Skriv din recension här"></textarea>
  <button class="submit-button">Submit</button>
  </div>


<script src="/static/script/fetchAverageRating"></script>

