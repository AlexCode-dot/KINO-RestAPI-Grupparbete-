<% layout('layouts/main') %>
<div class="top__movieTitle">
  <h1>
    <%= movie.title %>
  </h1>    
</div>
<div class="singleMovie__main">
  <div class="singleMovie__leftContainer">  
     <div class="singleMovie__main-poster">
       <% if (movie.image) { %>
         <img src="<%= movie.image.url %>">
         <% } %>
    </div>
  </div>

  <div class="singleMovie__rightContainer">
     <div class="singleMovie__main-info">
       <div class="singleMovie__main-rating"></div>
       <div class="singleMovie__main-description"><h3>Handling:</h3> <%- movie.intro %></div>    
     </div>
     <div class="singleMovie__main-screenings">
       <h2>Kommande visningar</h2>
       <div class="singleMovie__screenings"></div>
     </div>
  </div>
</div>

<div class="singleMovie__reviews">
  <h1>Recensioner</h1>
  <div id="reviews-container" class="singleMovie__reviewContainer">
    <div id="reviews-list">
      <p>Laddar recensioner...</p>
    </div>
  </div>

  <div id="pagination">
    <button type="button" id="prevBtn">Tillbaka</button>
    <span id="pagination-info">Sida 1</span>
    <button type="button" id="nextBtn">Nästa</button>
  </div>


  </div>
  </div>  

</div>

<!---- Review Form ---->

<div class="singleMovie__addReviews">
  <h1>Skriv en recension</h1>

  <form action="/submit-review" method="POST">
    <div class="rating">
      <label for="rating">Betyg: </label>
      <select id="rating" name="rating" class="rating-dropdown">
        <option value="1">&#9733;</option>
        <option value="2">&#9733;&#9733;</option>
        <option value="3">&#9733;&#9733;&#9733;</option>
        <option value="4">&#9733;&#9733;&#9733;&#9733;</option>
        <option value="5">&#9733;&#9733;&#9733;&#9733;&#9733;</option>
      </select>
    </div>

    <div class="name">
      <label for="name" class="name-label">Ditt namn: </label>
      <input type="text" id="name" name="name" class="name-input" required>
    </div>

    <div class="review">
      <label for="review" class="review-label">Din recension: </label>
      <textarea id="review" name="review" class="review-textarea" placeholder="Skriv din recension här" required></textarea>
    </div>

    <button type="submit" class="submit-button">Skicka</button>
  </form>
</div>


<script src="/static/script/fetchAverageRating.js"></script>
<script type="module" src="/static/script/loadReviews.js"></script>
<script src="/static/Script/createScreeningsDOM.js"></script>