<% layout('layouts/main') %>

    <h3>Medlemslogin</h3>
    <div class="loginFirstDiv bg-primary">
        <a href="https://myaccount.google.com/"><img src="../static/assets/images/icons/icons-google-signin.png"
                alt="Google sign-in button"></a>
        <hr class="bg-white hr-custom">
        <form class="loginSecondDiv bg-primary text-white needs-validation" novalidate>
            <div class="mb-3 bg-primary">
                <label for="exampleInputEmail1" class="form-label">E-postadress eller användarnamn</label>
                <input type="text" class="form-control" id="exampleInputEmail1"
                    placeholder="Fyll i e-postadress eller användarnamn" aria-describedby="emailHelp" value="" required>
                <div class="invalid-feedback bg-third text-white">Detta fält måste fyllas i</div>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Lösenord</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Ange lösenord"
                    required>
                <div class="invalid-feedback bg-third text-white">Du måste ange ett lösenord</div>
            </div>
            <div class="text-center">
                <p id="loginMessage" class="mt-3">Felaktigt användarnamn eller lösenord</p>
            </div>
            <a href="/forgotpassword" class="password text-second fs-6">Glömt lösenord?</a>
            <div class="loginButtonDiv d-flex justify-content-center">
                <button type="submit" class="btn btn-custom text-white">Logga in</button>
            </div>
            <div class="d-flex justify-content-center">
                <p>Har du inte ett konto?<a href="/register" class="text-second"> Registrera dig</a></p>
            </div>
        </form>
    </div>

    <div class="modal fade" id="loggedInModal" tabindex="-1" aria-labelledby="loggedInModalLabel" aria-hidden="true" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
          <div class="modal-content bg-primary text-white">
            <div class="modal-header">
              <h5 class="modal-title" id="loggedInModalLabel">Inloggning lyckades!</h5>
            </div>
            <div class="modal-body">
              <p class="welcome-message"></p>
            </div>
            <div class="modal-footer">
              <a href="/profil" class="btn btn-custom text-white" role="button">Gå vidare</a>
            </div>
          </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="static/Script/loginValidation.js"></script>
    <script src="static/Script/compareFormToLocalStorage.js"></script>